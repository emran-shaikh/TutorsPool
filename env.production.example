# Production Environment Variables for TutorsPool
# Copy this file and rename to .env.production.local for actual deployment

# Database Configuration
USE_FIREBASE=true
USE_SUPABASE=false

# Supabase Configuration (Disabled - Using Firebase)
SUPABASE_URL=disabled
SUPABASE_ANON_KEY=disabled
SUPABASE_SERVICE_ROLE_KEY=disabled

# Firebase Configuration (Client-side - Safe for frontend)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Admin SDK (Server-side - SECRET!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_content_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# WhatsApp Business API Configuration (Client-side - for frontend)
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
VITE_WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id_here
VITE_ADMIN_WHATSAPP_NUMBER=+15551234567

# WhatsApp Server-side Configuration (for webhooks)
WHATSAPP_WEBHOOK_SECRET=your_whatsapp_webhook_secret_here
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Google Maps (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Settings
APP_NAME=TutorsPool
APP_VERSION=1.0.0
APP_DOMAIN=your-domain.com

# Security Settings
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
FRONTEND_URL=https://your-frontend-url.vercel.app
BACKEND_URL=https://your-backend-url.vercel.app

# API Configuration
VITE_API_URL=https://your-app-name.vercel.app/api

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password_here

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,svg

# Analytics
VITE_VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here