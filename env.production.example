# ==============================================
# TUTORSPOOL PRODUCTION CONFIGURATION
# ==============================================
# Copy this file to .env.production.local for production deployment

# ==============================================
# CRITICAL: VERCEL ENVIRONMENT VARIABLES
# ==============================================
# Set these in your Vercel Dashboard:
# Project Settings > Environment Variables

# Application Environment
NODE_ENV=production

# Security - REQUIRED
JWT_SECRET=your_production_jwt_secret_min_32_chars_long_random_string

# Frontend URLs
VITE_FRONTEND_URL=https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app

# Backend/API URLs
VITE_API_URL=https://your-app.vercel.app/api
BACKEND_URL=https://your-app.vercel.app/api

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
# Client-side Firebase (Safe to expose)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123
VITE_FIREBASE_MEASUREMENT_ID=G-ABC123

# Server-side Firebase Admin (KEEP SECRET!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=abc123keyid
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
# Use LIVE keys for production (pk_live_... and sk_live_...)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================
# AI CHATBOT CONFIGURATION
# ==============================================
# Choose ONE provider: openai, google, anthropic, or local

# Option 1: Google Gemini (Recommended - Free tier available)
AI_PROVIDER=google
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL=gemini-pro

# Option 2: OpenAI (GPT-4, GPT-3.5-turbo)
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-your_openai_api_key
# OPENAI_MODEL=gpt-3.5-turbo

# Option 3: Anthropic Claude
# AI_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your_key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Option 4: Local/Rule-based (No API key needed)
# AI_PROVIDER=local

# ==============================================
# WHATSAPP BUSINESS API (Optional)
# ==============================================
# Client-side WhatsApp
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
VITE_ADMIN_WHATSAPP_NUMBER=+1234567890

# Server-side WhatsApp
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret
WHATSAPP_VERIFY_TOKEN=your_verify_token

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_app_password

# ==============================================
# GOOGLE SERVICES (Optional)
# ==============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
USE_FIREBASE=true
USE_SUPABASE=false

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME=TutorsPool
APP_VERSION=1.0.0
APP_DOMAIN=your-app.vercel.app

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,svg

# ==============================================
# VERCEL-SPECIFIC SETTINGS
# ==============================================
# These are automatically set by Vercel:
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app
# VERCEL_REGION=iad1
